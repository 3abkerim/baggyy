{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <form method="post" class="w-full max-w-lg mx-auto mt-9 bg-blue-500 p-6 rounded-lg border-2 border-black shadow-lg">

        <div class="text-center">
            <img src="{{ asset('images/BAGGYY.png') }}" class="w-20 mx-auto mb-3" alt="Baggyy Logo">
            <h1 class="text-amber-50 font-bold text-2xl">Login to Your Account</h1>
        </div>

        <!-- Error Message -->
        {% if error %}
            <div class="bg-red-500 text-white text-center py-2 px-4 mb-3 rounded-lg">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <!-- If the user is already logged in -->
        {% if app.user %}
            <div class="text-white text-center mb-3">
                You are logged in as <strong>{{ app.user.userIdentifier }}</strong>,
                <a href="{{ path('app_logout') }}" class="underline text-amber-50 hover:text-amber-200">Logout</a>
            </div>
        {% endif %}

        <!-- Email Field -->
        <div class="mb-4">
            <label for="inputEmail" class="block uppercase tracking-wide text-white text-xs font-bold mb-2">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                   class="appearance-none block w-full bg-gray-200 text-gray-700 border border-black rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                   placeholder="you@example.com" required autofocus>
        </div>

        <!-- Password Field -->
        <div class="mb-4">
            <label for="inputPassword" class="block uppercase tracking-wide text-white text-xs font-bold mb-2">Password</label>
            <input type="password" name="password" id="inputPassword"
                   class="appearance-none block w-full bg-gray-200 text-gray-700 border border-black rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                   placeholder="Enter your password" required>
        </div>

        <!-- Remember Me Checkbox -->
        <div class="mb-4 flex items-center">
            <input type="checkbox" name="_remember_me" id="rememberMe"
                   class="mr-2 h-4 w-4 text-blue-600 bg-gray-100 border-black rounded focus:ring-2 focus:ring-blue-400">
            <label for="rememberMe" class="text-white text-sm cursor-pointer">Remember Me</label>
        </div>

        <!-- CSRF Token -->
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <!-- Submit Button -->
        <div class="flex justify-center">
            <button type="submit" class="px-6 py-3 bg-amber-50 border-2 border-black font-semibold rounded-lg shadow-md hover:bg-blue-200 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-opacity-75 hover:cursor-pointer">
                Sign in
            </button>
        </div>

    </form>
{% endblock %}
