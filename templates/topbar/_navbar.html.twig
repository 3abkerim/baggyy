<nav class="fixed w-full z-20 top-0 start-0">
    <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
        <a href="{{ path('home') }}" class="flex items-center space-x-3 rtl:space-x-reverse">
            <img src="{{ asset('images/BAGGYY.png') }}" class="w-20 g-auto" alt="Baggyy logo">
        </a>
        <div class="flex md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse">
            {% if app.user %}
                <div x-data="{ open: false }" class="relative inline-block text-left">
                    <button
                            @click="open = !open"
                            type="button"
                            class="text-black bg-white border-2 border-black hover:bg-baggyy-yellow hover:cursor-pointer focus:ring-4 focus:outline-none focus:ring-blue-300 font-phudu-bold rounded-full text-sm px-4 py-2 text-center"
                    >
                        {{ app.user.firstName|default('Account') }}
                        <svg class="inline w-4 h-4 ml-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </button>

                    <div
                            x-show="open"
                            @click.away="open = false"
                            class="absolute right-0 z-10 mt-2 w-48 origin-top-right rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none"
                    >
                        <div class="py-1">
                            <a href="{{ path('home') }}"
                               class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-black">
                                My Account
                            </a>

                            <form method="post" action="{{ path('home') }}">
                                <button type="submit"
                                        class="w-full text-left block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 hover:text-black">
                                    Logout
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            {% else %}
                <a href="{{ path('login') }}" type="button" class="text-black bg-white border-2 border-black hover:bg-baggyy-yellow hover:cursor-pointer focus:ring-4 focus:outline-none focus:ring-blue-300 font-phudu-bold rounded-full text-sm px-4 py-2 text-center">Sign in</a>
            {% endif %}
            <button data-collapse-toggle="navbar-sticky" type="button" class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200" aria-controls="navbar-sticky" aria-expanded="false">
                <span class="sr-only">Open main menu</span>
                <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"></path>
                </svg>
            </button>
        </div>
        <div class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1" id="navbar-sticky">
            <ul class="uppercase flex flex-col p-4 md:p-0 mt-4 font-medium border border-gray-100 rounded-lg md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0">
                <li>
                    <a href="{{ path('shop_create') }}" class="block py-2 px-3 {{ app.request.attributes.get('_route') == 'shop_create' ? 'text-baggyy-yellow' : 'text-white' }} rounded-sm hover:bg-gray-100 md:hover:bg-transparent md:hover:text-baggyy-yellow md:p-0 font-phudu-bold">
                        Shop
                    </a>
                </li>
                <li>
                    <a href="{{ path('send') }}" class="block py-2 px-3 {{ app.request.attributes.get('_route') == 'send' ? 'text-baggyy-yellow' : 'text-white' }} rounded-sm hover:bg-gray-100 md:hover:bg-transparent md:hover:text-baggyy-yellow md:p-0 font-phudu-bold">
                        Send
                    </a>
                </li>
                <li>
                     <a href="{{ path('travel') }}" class="block py-2 px-3 {{ app.request.attributes.get('_route') == 'travel' ? 'text-baggyy-yellow' : 'text-white' }} rounded-sm hover:bg-gray-100 md:hover:bg-transparent md:hover:text-baggyy-yellow md:p-0 font-phudu-bold">
                        Travel
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>