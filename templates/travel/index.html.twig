{% extends 'base.html.twig' %}

{% block title %}Baggyy : Travel{% endblock %}

{% block body %}
    <div class="container mx-auto p-4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 bg-secondary rounded-2xl border-2 border-black px-4">
            <div class="flex justify-center items-center">
                {{ form_start(form, {attr: {class: 'w-full mx-auto px-4 mt-6 md:mt-0'}}) }}
                    <ul class="flex text-sm font-medium text-center text-gray-500 rounded-lg shadow-sm mb-4 overflow-hidden">
                        <li class="w-full">
                            <button type="button" data-tab="one-way" class="cursor-pointer tab-btn inline-block w-full p-4 text-gray-900 bg-gray-100 focus:outline-none">One-way Trip</button>
                        </li>
                        <li class="w-full">
                            <button type="button" data-tab="round-trip" class="cursor-pointer tab-btn inline-block w-full p-4 bg-white hover:bg-gray-50 focus:outline-none">Round Trip</button>
                        </li>
                    </ul>
                    <div>
                        {{ form_label(form.departure) }}
                        <div class="relative">
                            <div class="absolute inset-y-0 start-0 top-0 flex items-center ps-3.5 pointer-events-none">
                                <i class="fa-solid fa-location-dot text-gray-500"></i>
                            </div>
                            {{ form_widget(form.departure) }}
                        </div>
                        {{ form_errors(form.departure) }}
                    </div>

                    <div class="mt-3">
                        {{ form_label(form.destination) }}
                        <div class="relative">
                            <div class="absolute inset-y-0 start-0 top-0 flex items-center ps-3.5 pointer-events-none">
                                <i class="fa-solid fa-location-dot text-gray-500"></i>
                            </div>
                            {{ form_widget(form.destination) }}
                        </div>
                        {{ form_errors(form.destination) }}
                    </div>

                    <div class="mt-3">
                        {{ form_label(form.tripDate) }}
                        <div class="relative">
                            <div class="absolute inset-y-0 start-0 top-0 flex items-center ps-3.5 pointer-events-none">
                                <i class="fa-solid fa-calendar text-gray-500"></i>
                            </div>
                            {{ form_widget(form.tripDate) }}
                        </div>
                        {{ form_errors(form.tripDate) }}
                    </div>

                    {{ form_row(form.save) }}

                {{ form_end(form) }}
            </div>

            <div class="text-center flex justify-center items-center flex-col h-120">
                <h1 class="font-phudu-bold text-3xl">Make Money while you are travelling</h1>
                <p class="mt-4 text-2xl">Optimize your trips by transporting parcels for people in need. Connect with senders, choose deliveries that match your route, and make extra income effortlessly.</p>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('travel') }}
{% endblock %}
