{% extends 'base.html.twig' %}

{% block title %}Hello ShopController!{% endblock %}

{% block body %}
    <div class="container mx-auto p-4">
        <div class="bg-secondary rounded-2xl border-2 border-black px-4">
            <div class="flex justify-center items-center">
                <div class="w-full max-w-lg"> {# ðŸ‘ˆ add this wrapper to control width and layout #}
                    {{ form_start(form, { attr: { class: 'w-full px-4 mt-6 md:mt-0' } }) }}

                    <div class="mb-4">
                        {{ form_label(form.productUrl) }}
                        <div class="relative">
                            <div class="absolute inset-y-0 start-0 top-0 flex items-center ps-3.5 pointer-events-none">
                                <i class="fa-solid fa-location-dot text-gray-500"></i>
                            </div>
                            {{ form_widget(form.productUrl) }}
                        </div>
                        {{ form_errors(form.productUrl) }}
                    </div>

                    <div class="mt-4">
                        {{ form_row(form.submit) }}
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
