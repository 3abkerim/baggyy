{% extends 'base.html.twig' %}

{% block title %}Sign up{% endblock %}

{% block body %}
    {{ form_start(form, {'attr': {'class': 'w-full max-w-lg mx-auto mt-9'}}) }}

    <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
            {{ form_label(form.firstName, 'First Name', {'label_attr': {
                'class': 'block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2'
            }}) }}

            {{ form_widget(form.firstName, {'attr': {
                'class': 'appearance-none block w-full bg-gray-200 text-gray-700 border border-black rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white',
                'placeholder': 'Jane'
            }}) }}
        </div>

        <div class="w-full md:w-1/2 px-3">
            {{ form_label(form.lastName, 'Last Name', {'label_attr': {
                'class': 'block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2'
            }}) }}

            {{ form_widget(form.lastName, {'attr': {
                'class': 'appearance-none block w-full bg-gray-200 text-gray-700 border border-black rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500',
                'placeholder': 'Doe'
            }}) }}

            {{ form_errors(form.lastName) }}
        </div>
    </div>

    <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full px-3">
            {{ form_label(form.email, 'Email', {'label_attr': {
                'class': 'block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2'
            }}) }}

            {{ form_widget(form.email, {'attr': {
                'class': 'appearance-none block w-full bg-gray-200 text-gray-700 border border-black rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500',
                'placeholder': 'you@example.com'
            }}) }}

            {{ form_errors(form.email) }}
        </div>
    </div>

    <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
            {{ form_label(form.password.first, 'Password', {
                'label_attr': {
                    'class': 'block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2'
                }
            }) }}

            {{ form_widget(form.password.first, {
                'attr': {
                    'class': 'appearance-none block w-full bg-gray-200 text-gray-700 border border-black rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500',
                    'placeholder': 'Enter your password'
                }
            }) }}

            {{ form_errors(form.password.first) }}

            <p class="text-gray-600 text-xs italic">
                Make it as long and as crazy as youâ€™d like
            </p>
        </div>

        <div class="w-full md:w-1/2 px-3">
            {{ form_label(form.password.second, 'Confirm Password', {
                'label_attr': {
                    'class': 'block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2'
                }
            }) }}

            {{ form_widget(form.password.second, {
                'attr': {
                    'class': 'appearance-none block w-full bg-gray-200 text-gray-700 border border-black rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500',
                    'placeholder': 'Repeat your password'
                }
            }) }}

            {{ form_errors(form.password.second) }}
        </div>
    </div>


    <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full px-3">
            {{ form_widget(form.submit, {
                'attr': {
                    'class': 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded'
                }
            }) }}
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}
