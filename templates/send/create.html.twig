{% import 'components/_buttons.twig' as buttons %}

{% extends 'base.html.twig' %}

{% block title %}Send{% endblock %}

{% block body %}
    <div class="container mx-auto p-4">
        <div class="bg-secondary rounded-2xl border-2 border-black px-4 py-10">
            <div class="flex justify-center items-center">
                <div class="w-full max-w-lg">
                    {{ form_start(form) }}

                    <div class="mb-4">
                        {{ form_label(form.departure) }}
                        <div class="relative">
                            <div class="absolute inset-y-0 start-0 top-0 flex items-center ps-3.5 pointer-events-none">
                                <i class="fa-solid fa-location-dot text-gray-500"></i>
                            </div>
                            {{ form_widget(form.departure) }}
                        </div>
                        {{ form_errors(form.departure) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(form.destination) }}
                        <div class="relative">
                            <div class="absolute inset-y-0 start-0 top-0 flex items-center ps-3.5 pointer-events-none">
                                <i class="fa-solid fa-location-dot text-gray-500"></i>
                            </div>
                            {{ form_widget(form.destination) }}
                        </div>
                        {{ form_errors(form.destination) }}
                    </div>

                    <div class="mt-4 flex justify-center items.center">
                        {{ buttons.BaggyyButton('Next', 'submit', '') }}
                    </div>

                    {{ form_end(form, {render_rest: false}) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
